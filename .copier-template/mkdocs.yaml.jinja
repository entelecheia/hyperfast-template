site_name: {{ friendly_name }}
site_url: {{ documentation_url }}
site_author: {{ author }} <{{ email }}>
site_description: >-
  {{ project_short_description }}
# Repository
repo_name: {{ github_username }}/{{ github_repo_name }}
repo_url: https://github.com/{{ github_username }}/{{ github_repo_name }}

# Copyright
copyright: Copyright &copy; {{ copyright_year }} {{ author }}

# Configuration
theme:
  name: material
  palette:
    scheme: slate
  features:
    - navigation.expand
    - content.action.edit
    - content.action.view
    - content.code.annotate
    - content.code.copy
    # - content.tabs.link
    - content.tooltips
  {% if favicon_path %}favicon: {{ favicon_path }} {% endif -%} # favicon: Path to the favicon image
  {% if logo_path %}logo: {{ logo_path }} {% endif -%} # logo: Path to the book logo

# Extensions
markdown_extensions:
  - markdown_include.include:
      base_path: .
  - pymdownx.arithmatex:
      generic: true
  - admonition
  - pymdownx.highlight:
      anchor_linenums: true
      line_spans: __span
      pygments_lang_class: true
  - pymdownx.inlinehilite
  - pymdownx.snippets
  - pymdownx.superfences

# Plugins
plugins:
  - search
  - mkdocstrings:
      handlers:
        # See: https://mkdocstrings.github.io/python/usage/
        python:
          options:
            docstring_style: sphinx

# Customization
extra_javascript:
  - javascripts/mathjax.js
  - https://polyfill.io/v3/polyfill.min.js?features=es6
  - https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js
{% if google_analytics_id -%}
extra:
  analytics:
    provider: google
    property: {{ google_analytics_id }}
{% endif -%}

